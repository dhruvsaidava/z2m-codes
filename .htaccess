# Z2M Codes - Apache Configuration

# Enable Rewrite Engine
RewriteEngine On
RewriteBase /z2m-codes/

# Prevent directory browsing
Options -Indexes

# Set default index files
DirectoryIndex index.php index.html

# Clean URL Rewrites
# ------------------

# Homepage
RewriteRule ^home/?$ index.php [L,QSA]

# All codes page
RewriteRule ^codes/?$ codes.php [L,QSA]
RewriteRule ^all-codes/?$ codes.php [L,QSA]

# Category pages - /category/sensors
RewriteRule ^category/([a-zA-Z0-9-]+)/?$ codes.php?category=$1 [L,QSA]

# Difficulty filter - /difficulty/beginner
RewriteRule ^difficulty/([a-zA-Z0-9-]+)/?$ codes.php?difficulty=$1 [L,QSA]

# Search - /search/keyword
RewriteRule ^search/([^/]+)/?$ codes.php?search=$1 [L,QSA]

# View single code - /code/9 or /code/9/title-slug
RewriteRule ^code/([0-9]+)/?$ view-code.php?id=$1 [L,QSA]
RewriteRule ^code/([0-9]+)/([a-zA-Z0-9-]+)/?$ view-code.php?id=$1 [L,QSA]

# Protect sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect config and data files from direct access (optional security)
# Uncomment if you want extra protection
# <FilesMatch "^(config\.php|codes\.php)$">
#     Order allow,deny
#     Deny from all
# </FilesMatch>

# Enable gzip compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Set cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Error pages (create these if needed)
# ErrorDocument 404 /z2m-codes/404.php
# ErrorDocument 403 /z2m-codes/403.php
# ErrorDocument 500 /z2m-codes/500.php

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# PHP Settings (optional)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

