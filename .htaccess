# =========================================================
# üîß Z2M Codes - Apache Configuration
# Production-Ready Clean URLs with Backward Compatibility
# =========================================================

# Enable Rewrite Engine
RewriteEngine On

# Prevent directory browsing
Options -Indexes

# Set default index files
DirectoryIndex index.php index.html

# =========================================================
# üåê Clean SEO-Friendly URL Rewrites
# =========================================================

# Homepage
RewriteRule ^home/?$ index.php [L,QSA]

# All codes page
RewriteRule ^codes/?$ codes.php [L,QSA]
RewriteRule ^all-codes/?$ codes.php [L,QSA]

# Category pages - /category/sensors
RewriteRule ^category/([a-zA-Z0-9-]+)/?$ codes.php?category=$1 [L,QSA]

# Difficulty filter - /difficulty/beginner
RewriteRule ^difficulty/([a-zA-Z0-9-]+)/?$ codes.php?difficulty=$1 [L,QSA]

# Search - /search/led (URL encode the search term)
RewriteRule ^search/([^/]+)/?$ codes.php?search=$1 [L,QSA]

# View code by ID - /codes/view-code/3
RewriteRule ^codes/view-code/([0-9]+)/?$ view-code.php?id=$1 [L,QSA]

# View code by slug - /codes/view-code/arduino-light
RewriteRule ^codes/view-code/([a-zA-Z0-9-]+)/?$ view-code.php?slug=$1 [L,QSA]

# Backward compatibility - old query string URLs still work
# (No rules needed - Apache will pass them through naturally)

# =========================================================
# üõ°Ô∏è Security Rules
# =========================================================

# Protect hidden files (like .htaccess, .git, etc.)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Optional: Protect config and data files from direct access
# <FilesMatch "^(config\.php|data/codes\.php)$">
#     Order allow,deny
#     Deny from all
# </FilesMatch>

# =========================================================
# ‚ö° Performance Settings
# =========================================================

# Gzip compression for faster page loads
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# =========================================================
# üîí Security Headers
# =========================================================
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# =========================================================
# ‚öôÔ∏è PHP Environment Settings
# =========================================================
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

<IfModule mod_php8.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
